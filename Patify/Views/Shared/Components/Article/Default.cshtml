@model IEnumerable<Article>

@foreach (var item in Model)
{

    <div class="card mb-2 shadow">
        <div class="row">
            <div class="col-4">
                <img src="@Url.Content(item.ArticlePhoto)" class="d-block w-50" asp-append-version="true" />
            </div>
            <div class="col-8">
                <div class="card-body">
                    <h5 class="card-title">@item.ArticleHeader</h5>
                    <p class="card-text">@item.Content</p>
                    <a asp-controller="Article" asp-action="Details" asp-route-id="@item.Id">Devamı...</a>

                </div>
            </div>
        </div>
    </div>
}
